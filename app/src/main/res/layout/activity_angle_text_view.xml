<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.angleTextView.AngleTextViewActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#ddd" />

    <View
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="#0f0" />

    <com.test.angleTextView.AngleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:AngleTextViewTextMarginBottom="2dp"
        app:AngleTextViewAngle="30"
        app:AngleTextViewBgColor="@color/black"
        app:AngleTextViewTextMarginTop="10dp"
        app:AngleTextViewText="黄金会员"
        app:AngleTextViewTextColor="@color/white"
        app:AngleTextViewTextSize="12sp" />
</LinearLayout>
