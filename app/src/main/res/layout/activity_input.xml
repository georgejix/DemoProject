<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.keyboardinput.InputActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <EditText
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="phone_hint"
        android:layout_margin="20dp"
        android:inputType="phone" />

    <EditText
        android:id="@+id/textPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="textPassword"
        android:layout_margin="20dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/textAutoCorrect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="textAutoCorrect"
        android:layout_margin="20dp"
        android:inputType="textCapSentences|textAutoCorrect" />

    <EditText
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="search_hint"
        android:inputType="text"
        android:imeOptions="actionSend" />

    <EditText
        android:id="@+id/change"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="change_hint"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change"/>
</LinearLayout>
