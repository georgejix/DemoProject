<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.refreshandloadmore.RefreshAndLoadMoreActivity"
    android:background="@color/white"
    android:animateLayoutChanges="true">
    <com.test.refreshandloadmore.RefreshAndLoadMoreView
        android:id="@+id/refresh_and_load_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <com.test.refreshandloadmore.LoadMoreListView
            android:id="@+id/load_more_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:background="@color/white"
            android:animateLayoutChanges="true"
            android:listSelector="@android:color/transparent">
        </com.test.refreshandloadmore.LoadMoreListView>
    </com.test.refreshandloadmore.RefreshAndLoadMoreView>
</android.support.constraint.ConstraintLayout>
