<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundLayout">
        <attr name="roundLayoutRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ChooseDate">
        <attr name="mainTextColor" format="color"/>
        <attr name="hightlightTextColor" format="color"/>
        <attr name="mainBgColor" format="color"/>
        <attr name="hightlightBgColor" format="color"/>
        <attr name="mainTextSize" format="dimension"/>
        <attr name="perLineHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TrapesoidLayout">
        <attr name="triangleHeight" format="dimension"/>
        <attr name="orientation" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="backgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="AngleTextView">
        <attr name="AngleTextViewAngle" format="integer"/>
        <attr name="AngleTextViewText" format="string"/>
        <attr name="AngleTextViewTextSize" format="dimension"/>
        <attr name="AngleTextViewTextMarginTop" format="dimension"/>
        <attr name="AngleTextViewTextMarginBottom" format="dimension"/>
        <attr name="AngleTextViewPaddingTop" format="dimension"/>
        <attr name="AngleTextViewTextColor" format="color"/>
        <attr name="AngleTextViewBgColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ShadowImageView">
        <attr name="shadowRound" format="dimension" />
        <attr name="shadowSrc" format="reference" />
        <attr name="shadowColor" format="color" />
    </declare-styleable>



    <!--为了方便扩展其他layout，定义在外层，命名以layout_开头，否则lint会报红警告-->
    <attr name="layout_radius" format="dimension" />
    <attr name="layout_shadowColor" format="color" />
    <attr name="layout_shadowEvaluation" format="dimension" />
    <attr name="layout_shadowDx" format="dimension" />
    <attr name="layout_shadowDy" format="dimension" />
    <!--用统一一个EasyLayout，用于封装读取自定义属性-->
    <declare-styleable name="EasyLayout">
        <attr name="layout_radius" />
        <attr name="layout_shadowColor" />
        <attr name="layout_shadowEvaluation" />
        <attr name="layout_shadowDx" />
        <attr name="layout_shadowDy" />
    </declare-styleable>
    <!--和EasyLayout属性列表一样，但是命名要以XXX_Layout格式，这样开发工具会提示自定义属性-->
    <declare-styleable name="EasyConstraintLayout_Layout">
        <attr name="layout_radius" />
        <attr name="layout_shadowColor" />
        <attr name="layout_shadowEvaluation" />
        <attr name="layout_shadowDx" />
        <attr name="layout_shadowDy" />
    </declare-styleable>
</resources>